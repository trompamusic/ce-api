{
  "private": true,
  "name": "ce-api",
  "version": "0.6.1",
  "description": "API Node.js application for TROMPA Contributor Environment",
  "main": "src/index.js",
  "repository": {
    "type": "GIT",
    "url": "https://github.com/trompamusic/ce-api"
  },
  "dependencies": {
    "apollo-link": "^1.2.13",
    "apollo-link-http": "^1.5.16",
    "apollo-server": "^2.9.15",
    "apollo-server-express": "^2.9.15",
    "body-parser": "^1.19.0",
    "concatenate": "0.0.2",
    "cors": "^2.8.5",
    "express": "4.17.*",
    "graphql": "^14.5.8",
    "graphql-tag": "^2.10.1",
    "jsonwebtoken": "^8.5.1",
    "neo4j-driver": "4.0.*",
    "neo4j-graphql-js": "https://github.com/neo4j-graphql/neo4j-graphql-js#3e166629dfedcc8a8094851fd5d651f32650fb86",
    "validator": "12.1.*",
    "walk-sync": "2.0.*"
  },
  "devDependencies": {
    "@babel/cli": "7.7.*",
    "@babel/core": "7.7.*",
    "@babel/node": "7.7.*",
    "@babel/preset-env": "7.7.*",
    "@commitlint/cli": "^8.0.0",
    "@commitlint/config-conventional": "^8.0.0",
    "@types/jest": "^24.0.25",
    "babel-jest": "^24.9.0",
    "conventional-changelog": "^3.1.8",
    "conventional-changelog-cli": "^2.0.31",
    "eslint": "^5.16.0",
    "eslint-config-standard": "^12.0.0",
    "eslint-plugin-import": "^2.19.1",
    "eslint-plugin-node": "^8.0.1",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-standard": "^4.0.1",
    "eslint-plugin-varspacing": "1.2.1",
    "husky": "4.0.*",
    "jest": "^24.9.0",
    "lint-staged": "9.5.*",
    "node-fetch": "2.3.*",
    "nodemon": "^1.19.1"
  },
  "scripts": {
    "lint": "eslint src tests",
    "start": "nodemon --exec babel-node --watch src src/index.js",
    "test:functional": "CI=true jest tests/helpers.js tests/functional",
    "version": "conventional-changelog -i CHANGELOG.md -s && git add -A CHANGELOG.md"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS && lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,json,css": [
      "eslint --fix",
      "git add"
    ]
  },
  "jest": {
    "coverageReporters": [
      "json",
      "lcov"
    ]
  }
}
